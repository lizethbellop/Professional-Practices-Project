<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="580.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="practicasprofesionalespf.controller.coordinator.FXMLUpdateProjectController">
   <children>
      <Label fx:id="lblWindowTitle" alignment="CENTER" layoutX="175.0" layoutY="30.0" text="Actualizar Proyecto" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="90.0" text="Nombre del proyecto:" />
      <TextField fx:id="tfName" layoutX="200.0" layoutY="85.0" prefWidth="350.0" />
      <Label layoutX="50.0" layoutY="130.0" text="Departamento:" />
      <TextField fx:id="tfDepartment" layoutX="200.0" layoutY="125.0" prefWidth="350.0" />
      <Label layoutX="50.0" layoutY="170.0" text="Descripción:" />
      <TextArea fx:id="taDescription" layoutX="200.0" layoutY="165.0" prefHeight="100.0" prefWidth="350.0" wrapText="true" />
      <Label layoutX="50.0" layoutY="280.0" text="Metodología:" />
      <TextField fx:id="tfMethodology" layoutX="200.0" layoutY="275.0" prefWidth="350.0" />
      <Label layoutX="50.0" layoutY="320.0" text="Disponibilidad (1-5):" />
      <TextField fx:id="tfAvailability" layoutX="200.0" layoutY="315.0" prefWidth="100.0" />
      
      <Label layoutX="50.0" layoutY="360.0" text="Organización Vinculada:" />
      <ComboBox fx:id="cbLinkedOrganization" layoutX="200.0" layoutY="355.0" prefWidth="350.0" />
      <Label layoutX="50.0" layoutY="400.0" text="Responsable:" />
      <ComboBox fx:id="cbProjectManager" layoutX="200.0" layoutY="395.0" prefWidth="350.0" />
      
      <HBox alignment="CENTER" layoutX="100.0" layoutY="480.0" prefWidth="400.0" spacing="30.0">
         <children>
            <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#onCancelButtonClicked" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Cancelar">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnSave" mnemonicParsing="false" onAction="#onSaveButtonClicked" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Actualizar">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>